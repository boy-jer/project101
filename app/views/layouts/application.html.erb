<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", 'formtastic', 'formtastic_changes' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div id="header_container">
		<div id="header">
			<div id="user_nav">
				<% if user_signed_in? %>
					Signed in as <%= current_user.email %> | <%= link_to "Log Out!", destroy_user_session_path, :class => "smallbtn green" %>
				<% else %>
					<%= link_to "Log In", new_user_session_path, :class => "smallbtn green" %>
				<% end %>
			</div>
			<ul id="menu">
				<li><%= link_to "Home", root_url %></li>
				<% unless current_company.blank?  %>
					<% if can? :manage, current_company %>
					<li><%= link_to "Companies", :controller => '/companies', :action => 'index' %></li>
					<% end %>
					<li><%= link_to "Customers", company_customers_path(current_company) %>
						<ul>
							<li><%= link_to "All Customers", company_customers_path(current_company) %></li>
							<li><%= link_to current_company.name.capitalize + "'s Customers", my_customers_path %></li>
						</ul>
					</li>
					<li><%= link_to "Users", company_users_path %></li>
					<li><%= link_to "Categories", company_categories_path %></li>
					<li><%= link_to "Services", company_services_path %></li>
					<li><%= link_to "Service Group", company_service_groups_path %></li>
					<% if can? :manage, Vendor %>
					<li><li><%= link_to "Vendors", company_vendors_path %></li></li>
					<% end %>
				<% else %>
					<li><br />"Choose A Company first!"</li>
				<% end %>
			</ul>
			
			
		</div>
		
	</div>
    <div id="container">
	
	<div id="user_nav">
		<table width="100%">
			<tr>
				<td width="70%">
				</td>
				<td>
					
				</td>
			</tr>
		</table>
		
	</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
