<% if !tasks.blank? %>
  <table width="100%">
	<caption>All Company Tasks</caption>
	<tbody>
	<% tasks.each_slice(6) do |slice| -%>
	  <tr>
	    <% slice.each do |task| -%>
	      <td><%= link_to task.name, company_task_path(current_company, task) %></td>
	    <% end -%>
	  </tr>
	<% end -%>
	</tbody>
  </table>
<% else %>
  No tasks Scheduled.
<% end %>
