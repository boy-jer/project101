
<% title "Company Wide Reports" %>

<%= form_for @search, :url => company_full_reports_path(current_company), :html => {:method => :get}, :id => "full-reports-search" do |f| %>
<div id="full-reports-search-form" class="">
<table border=0 width="100%"> 
	
	<tr valign="TOP">
		<td width="25%">Vendor: <br />
			<% f.collection_checks :vendor_id_in, Vendor.all, :id, :name, :class => 'headcheck' do |check| %>
			   <%= check.box %> <%= check.label %><br />
			<% end %>
			
		</td>
		<td width="25%">Category: <br />
			<% f.collection_checks :category_id_in, Category.all, :id, :name, :class => 'headcheck' do |check| %>
			   <%= check.box %> <%= check.label %><br />
			<% end %>
			
			
		
		</td>
		<td width="25%">Location: <br />
			<% f.collection_checks :assigned_company_id_in, Company.all, :id, :name, :class => 'headcheck' do |check| %>
			   <%= check.box %> <%= check.label %><br />
			<% end %>
			
		</td>
		<td width="25%">Sold By: <br />
			<% f.collection_checks :user_id_in, User.all, :id, :full_name, :class => 'headcheck' do |check| %>
			   <%= check.box %> <%= check.label %><br />
			<% end %>
			
		</td>
	</tr>
	<tr>
		<td>Item Name: <br /><%= f.text_field :name_contains %></td>
		<td>Sold from date: <br />
			<%= f.text_field :created_at_gt, :class => "ui-date-picker", :value => f.object.try(:created_at_gt).try(:strftime,'%b %d %Y') %>
		</td>
		<td>
			to date:<br />
			<%= f.text_field :created_at_lt, :class => "ui-date-picker", :value => f.object.try(:created_at_lt).try(:strftime,'%b %d %Y') %><br />
		    
		</td>
		<td>&nbsp;</td>
	</tr>
</table>
<%= f.submit "Search", :class => "smallbtn  blue" %> <a href="#" id="clear-frf" class="smallbtn blue">Reset Form</a>
<% end %>
	
</div>


<p>
	<div id="full-reports-results"><%= render :partial => 'items' %></div>
	
</p>

