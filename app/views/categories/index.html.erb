<% title "Categories" %>


<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
  </tr>
  <% for category in @categories %>
    <tr valign="top">
      <td><%= category.name %></td>
      <td><%= category.parent_id %></td>
      <td><%= link_to "Show", company_category_path(current_company, category) %></td>
      <td><%= link_to "Edit", edit_company_category_path(current_company, category) %></td>
      <td><%= link_to "Destroy", [current_company, category], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Category", new_company_category_path(current_company, category) %></p>
