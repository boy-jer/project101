<% if !@orders.blank? %>
  <% @orders.each do |order| %>
	<%= link_to order.id, company_order_path(current_company, order) %><br />
	<%= order.closed? %><br />
	<% if !order.items.blank? %>
		<% order.items.each do |item| %>
			<p><%= item.name %></p>
		<% end %>
	<% else %>
		This order has nothing in it!<br />
	<% end %>
	<br />
  <% end %>
<% else %>
  <p>Has Not Purchased anything yet.</p>
<% end %>
