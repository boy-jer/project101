<% title "Companies" %>

<table>
  <tr>
    <th>Name</th>
	<th>subdomain</th>
    <th>Belongs To</th>
  </tr>
  <% for company in @companies %>
    <tr>
      <td><%= company.name %></td>
	  <td><%= link_to_unless(company.subdomain.blank?, company.subdomain, company) do |notthere|
		"No Subdomain Assigned"
	end
		 %></td>
      <td><b><%= company.parent.name unless company.parent_id.blank? %></b></td>
      <td><%= link_to "Go to", show_company_path(company) %></td>
	  <% if user_signed_in? && can?(:update, company) %>
      <td><%= link_to "Edit", edit_company_path(company) %></td>
      <td><%= link_to "Destroy", delete_company_path(company), :confirm => 'Are you sure?', :method => :delete %></td>
	  <% end %>
    </tr>
  <% end %>
</table>
<% if user_signed_in? && can?(:create, company) %>
<p><%= link_to "New Company", new_company_path(company) %></p>
<% end %>
