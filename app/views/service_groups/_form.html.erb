<%= semantic_form_for [current_company, @service_group] do |form| %>
    <%= form.inputs do %>
      <%= form.input :name %>
      <%= form.input :short_description, :as => :text, :input_html => { :class => 'autogrow', :rows => 4, :cols => 80, :maxlength => 254  } %>
	  <%= form.input :price, :as => :numeric %>
	  <%= form.input :new_service %>
	  <%= form.input :deleted, :label => "Disabled" %>
	  <%= form.input :category_id, :as => :select, :collection => sorted_nested_set_options(Category, lambda(&:name)) {|i, level| "#{'-' * level} #{i.name}" } %>
	 <%= form.input :services, :as => :check_boxes %>
    <% end %>
    <%= form.buttons do %>
      <%= form.commit_button %>
    <% end %>
  <% end %>
