<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", 'formtastic', 'formtastic_changes' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
	
	<div id="user_nav">
		<table width="100%">
			<tr>
				<td width="70%">
					<%= link_to "Home", root_url %> <%= link_to "Companies", :controller => '/companies', :action => 'index' %> | 
					<% unless current_company.blank?  %>
						<%= link_to "All Customers", company_customers_path(current_company) %> | 
						<%= link_to current_company.name.capitalize + "'s Customers", my_customers_path %> | 
						<%= link_to "Users", company_users_path %> | 
						<%= link_to "Categories", company_categories_path %> | 
						<%= link_to "Services", company_services_path %> | 
						<%= link_to "Service Group", company_service_groups_path %>
					<% else %>
						"Choose A Company first!"
					<% end %>
				</td>
				<td>
					<% if user_signed_in? %>
						Signed in as <%= current_user.email %> | <%= link_to "Log Out!", destroy_user_session_path %>
					<% else %>
						<%= link_to "Log In", new_user_session_path %>
					<% end %>
				</td>
			</tr>
		</table>
		
	</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
