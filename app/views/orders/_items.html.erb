<table width="100%" cellpadding="0" cellspacing="0">
<tr class="silverBoarderd">
	<th width="25%">Product / Service</th>
	<th width="35%">Description</th>
	<th width="15%">Price</th>
	<th width="10%">Qty</th>
	<th width="15%">Total </th>
</tr>

<% @order.items.order("id ASC").each do |item| %>
	
<% unless item.parent_id.blank? %>
	<tr class="item subItem">
<% else %>
	<tr class="item">
<% end %>
	<td width="25%" class="itemName"><%= item.name %></td>
	<td width="35%"><%= item.short_description %></td>
	<td width="15%" align=CENTER><%= number_to_currency(item.price) %></td>
	<td width="10%" align=CENTER><%= item.qty %></td>
	<td width="15%" align=CENTER> <%= number_to_currency(item.full_price) %> </td>
</tr>
<% end %>
</table>