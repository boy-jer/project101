<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application", 'formtastic', 'jquery-ui', 'facebox' %>
    <%= javascript_include_tag :defaults, 'facebox', 'jquery-ui-timepicker-addon', 'nested_form' %>
	<%= stylesheet_link_tag 'print', :media => "print"%>
	
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div id="header_container">
		<div id="header">
			
			<%= render :partial => "layouts/user_nav" %>
			
			<%= render :partial => "layouts/menu" %>
			
			
		</div><!-- header -->
		
	</div><!-- header-container -->
    <div id="container">
		<div id="flash_notice" style="display:none"></div>
		<div id="flash_alert" style="display:none"></div>
	
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div><!-- container -->
	<%= yield(:footer) %>
  </body>
</html>
