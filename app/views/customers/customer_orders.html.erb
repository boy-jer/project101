<% if !@orders.blank? %>
  <% @orders.each do |order| %>
	<p><%= link_to "Order #" + order.id.to_s, company_order_path(current_company, order) %><br />
	<% if !order.items.blank? %>
		<% order.items.each do |item| %>
			<%= item.name %><br />
		<% end %>
		
	<% else %>
		This order has nothing in it!<br />
	<% end %></p>
	<br />
  <% end %>
<% else %>
  <p>Has Not Purchased anything yet.</p>
<% end %>
